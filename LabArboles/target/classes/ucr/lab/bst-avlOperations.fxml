                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </VBox>
                              <Label fx:id="lbl_Balanced">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
