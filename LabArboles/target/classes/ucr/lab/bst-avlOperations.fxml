                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="treeHeighButton" disable="true" mnemonicParsing="false" onAction="#treeHeighOnAction" snapToPixel="false" text="Tree Height">
